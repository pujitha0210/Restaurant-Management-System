  align-items: center;
  position: relative;
  justify-content: center;
}
.navList li a {
  font-size: larger;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: whitesmoke;
  text-decoration: none;
  position: absolute;
  
  transition: transform 0.3s;
}

.logo {
  position: relative;
  width: 25%;
  background-color: coral;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  display: flex;
  align-items: center;
  justify-content:left;
  min-width: 135px;
  margin-left: 10px;

  font-size: larger;
  letter-spacing: 0.3px;
  
  height: 100%;
}


.navList li a:hover {
  transform: scale(1.2);
  text-decoration: underline;
  color: black;
}
.container{
    position: relative;
}

.head{
  z-index: 1;
}
