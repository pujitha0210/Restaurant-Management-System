<form method="post" action="/odetails">
  <div class="form-group m-2">
    {{!-- <label for="exampleInputEmail1">Customer ID</label> --}}
    <input type="text"  class="form-control" id="cust_id" aria-describedby="emailHelp" placeholder="Enter Customer id" name="cust_id" style="width:300px">
  </div>
  <button type="submit" class="btn btn-primary m-2">place order</button>
</form>
<br><br>


  
<div class="card-group" style=" z-index :0 ;">
    {{#each rows}}
  <div class="card-body" style="width:19rem; margin:1rem; border:1px solid gray; padding:1rem; border-radius:5px">
    <h5 class="card-title">{{this.food_id}} {{this.food_name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.food_price}}</h6>
     <h6 class="card-subtitle mb-2 text-muted">{{this.food_type}}</h6>
    <p class="card-text">{{this.food_description}}</p>
    <a href="/orderdetails/{{this.food_id}}/{{this.food_price}}" class="card-link" style="margin-right: 8px;"><i class="bi bi-pencil"></i> add to cust list</a>
    <a href="/editmenuitem/{{this.food_id}}" class="card-link"style="margin-right: 8px;"> <i class="bi bi-pencil"></i> Edit</a>
      <a href="/{{this.food_id}}" class="card-link" style="margin-right: 8px;"><i class="bi bi-person-x"></i> Delete</a> 
  </div>
  {{/each}}
    <br>
</div>
