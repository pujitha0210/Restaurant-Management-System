    <style>
        * {
  margin: 0px;
  padding: 0px;
  box-sizing: border-box;
}

.head {
  height: 80px;
  background-color: coral;
  width: 100%;
  position:fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.navBar {
  position: relative;
  height: 100%;
  width: 75%;
}
.navList {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content:space-around; */
  justify-content: space-around;
  height: 100%;
  width: 100%;
  background-color: coral;
}
.navList li {
  list-style-type: none;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  justify-content: center;
}
.navList li a {
  font-size: larger;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: whitesmoke;
  text-decoration: none;
  position: absolute;
  
  transition: transform 0.3s;
}

.logo {
  position: relative;
  width: 25%;
  background-color: coral;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  display: flex;
  align-items: center;
  justify-content:left;
  min-width: 135px;
  margin-left: 10px;

  font-size: larger;
  letter-spacing: 0.3px;
  
  height: 100%;
}


.navList li a:hover {
  transform: scale(1.2);
  text-decoration: underline;
  color: black;
}
.container{
    position: relative;
}
      .sub-btn{
        position: absolute;
        top: 80%;
        left: 70%;
      }
      .button{
        height:40px;
        width:200px;
        background-color: rgb(104, 104, 238);
        border: none;
        outline: none;
        border-radius: 20px;
      }
      .link{
        text-decoration: none;
        color: white;
      }
  
  .head{
  z-index: 1;
}
    </style>
</head>
<body>
   <div class="container1">
        <header class="head">
            <div class="logo">TKR RESTAURANT</div>
            <div class="navBar">
                    <ul class="navList">
                        <li class="home"><a href="/homepage">Home</a></li>
                        <li class="menu"><a href="/menupage">Menu</a></li>
                        <li class="rating"><a href="/staffpage">Staff</a></li>
                        <li class="owner"><a href="/paymentpage">Payment</a></li>
                        <li class="owner"><a href="/orderspage">Orders</a></li>
                        <li class="owner"><a href="/ratingpage">Rating</a></li>

                    </ul>
            </div>
        </header>    
    </div>
    <br><br>
    <br><br><br>

</div>

<form  action="/readytopay" method="post" class="row g-3 needs-validation" " novalidate style="margin: 0px 100px 0px 100px;">


<div class="col-6">
<div class="form-floating mb-3">
  <input type="text" class="form-control" id="floatingInput" placeholder="Customer ID  " name="cust_id" value="{{this.cust_id}}" style="width:400px">
  <label for="floatingInput">Customer ID</label>
</div>
</div>
<br>
{{#if rows}}
<div class="col-6">
<div class="form-floating mb-3">
  <input type="text" class="form-control" id="floatingInput" placeholder="Total Price " name="total_price" value="{{rows}}" style="width:400px">
  <label for="floatingInput">Total bill</label>
</div>
</div>
{{/if}}
